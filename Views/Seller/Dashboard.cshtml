@{
    ViewData["Title"] = "Seller Dashboard";
}
<h2>Welcome, @User.Identity.Name</h2>

<div class="row">
    <div class="col-md-3">
        <div class="card text-white bg-info mb-3">
            <div class="card-body">
                <h5>Total Products</h5>
                <p class="display-6">@Model.TotalProducts</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5>Orders</h5>
                <p class="display-6">@Model.TotalOrders</p>
            </div>
        </div>
    </div>
    <!-- Add more summary cards here -->
</div>

<a class="btn btn-primary my-3" asp-controller="Products" asp-action="Create">Add New Product</a>

<h3>Your Products</h3>
<partial name="_ProductTablePartial" model="Model.Products" />